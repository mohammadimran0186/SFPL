<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View/Download Drawings</title>
</head>
<body>
    <h1>View/Download Drawings</h1>

    <ul>
        <% files.forEach(function(file) { %>
            <li>
                <%= file %>
                <% if (file.endsWith('.dwg')) { %>
                    <!-- Only download button for DWG files -->
                    <a href="/uploads/<%= file %>" download>Download</a>
                <% } else { %>
                    <!-- View and download buttons for other file types -->
                    <a href="/uploads/<%= file %>" target="_blank">View</a>
                    <a href="/uploads/<%= file %>" download>Download</a>
                <% } %>
            </li>
        <% }); %>
    </ul>

    <a href="/upload">Upload More Drawings</a>
    <a href="/">Go to Homepage</a>
</body>
</html>

