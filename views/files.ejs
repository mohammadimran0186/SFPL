<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View/Download Drawings</title>
</head>
<body>
    <h1>View/Download Drawings</h1>

    <ul>
        <% files.forEach(function(file) { %>
            <li>
                <%= file %>
                <!-- Conditional buttons based on file type -->
                <% if (file.endsWith('.dwg')) { %>
                    <!-- Only download button for DWG files -->
                    <a href="/uploads/<%= file %>" download>Download</a>
                <% } else if (file.endsWith('.pdf') || file.endsWith('.png') || file.endsWith('.jpg')) { %>
                    <!-- View and download buttons for PDF and image files -->
                    <a href="/uploads/<%= file %>" target="_blank">View</a>
                    <a href="/uploads/<%= file %>" download>Download</a>
                <% } %>
            </li>
        <% }); %>
    </ul>

    <!-- Back to the index/home page -->
    <a href="/">Back to Home</a>
</body>
</html>

